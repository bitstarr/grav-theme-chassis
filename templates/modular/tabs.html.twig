<section class="modular wrapping tabs tabs--default">
    <h2 class="modular__title">{{ page.title }}</h2>

    <div class="wrapped">
        <ul class="tabs__head">
            {% set tabs = page.collection( {
                items: {
                    '@self.modular': ''
                }
            } ) %}
            {% for target in tabs %}
            <li class="tabs__tab">
                <a class="tabs__toggle" href="#tabsection{{ loop.index }}">
                    <span class="label">{{ target.title }}</span>
                </a>
            </li>
            {% endfor %}
        </ul>
        {% for target in tabs %}
        <article class="tabs__content" id="tabsection{{ loop.index }}">
            <h2 class="tabs__title">{{ target.title }}</h2>
            <div class="textflow">
                {{ target.content|raw }}
            </div>
        </article>
        {% endfor %}
    </div>

</section>